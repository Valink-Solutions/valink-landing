---
import Logo from "../components/logo.astro";

const { current_page } = Astro.props;
---

<script>
  let burger: Element = document.querySelector(".navbar-burger") as Element;
  let close: Element = document.querySelector(".navbar-close") as Element;
  let menu: Element = document.querySelector(".navbar-menu") as Element;

  burger.addEventListener("click", function () {
    menu.classList.toggle("hidden");
    burger.classList.toggle("hidden");
    close.classList.toggle("hidden");
  });

  close.addEventListener("click", function () {
    menu.classList.toggle("hidden");
    close.classList.toggle("hidden");
    burger.classList.toggle("hidden");
  });
</script>

<header class="text-base-content">
  <div class="container mx-auto grid grid-cols-4 p-4">
    <a href="/" class="col-span-1 col-start-1 w-52" aria-label="Home">
      <Logo />
    </a>
    <div
      class="col-span-1 col-start-4 flex items-center justify-end text-right lg:hidden"
    >
      <button class="navbar-burger fill-base-content">
        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M3 18h18v-2H3v2zm0-5h18v-2H3v2zm0-7v2h18V6H3z"/>
        </svg>
      </button>
      <button class="navbar-close hidden fill-base-content">
        <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
          <path d="M19 6.41L17.59 5 12 10.59 6.41 5 5 6.41 10.59 12 5 17.59 6.41 19 12 13.41 17.59 19 19 17.59 13.41 12z"/>
        </svg>
      </button>
    </div>
    <nav
      class="navbar-menu col-span-4 row-start-2 mt-4 hidden items-center justify-end lg:col-span-3 lg:col-start-2 lg:row-start-1 lg:mt-0 lg:flex relative"
    >
      <div class="flex flex-col items-center justify-end gap-4 lg:flex-row w-full">
        <a
          href="/"
          class={`btn w-full lg:max-w-[100px] ${
            current_page === "home" ? "btn-primary border-primary" : "border-base-300"
          }`}>Home</a
        >
        <a
          href="/projects"
          class={`btn w-full lg:max-w-[100px] ${
            current_page === "projects" ? "btn-primary border-primary" : "border-base-300"
          }`}>Projects</a
        >
        <!-- <a
          href="/hardware"
          class={`btn w-full lg:max-w-[100px] ${
            current_page === "hardware" ? "btn-primary border-primary" : "border-base-300"
          }`}>Hardware</a
        > -->
        <a
          href="/services"
          class={`btn w-full lg:max-w-[100px] ${
            current_page === "services" ? "btn-primary border-primary" : "border-base-300"
          }`}>Services</a
        >
      </div>
    </nav>
  </div>
</header>
